public String teenTalk(String sentence) {
    // Your like code like here
    String[] sentence2 = sentence.split(" ");
    String sentence3 = "";
    for (String s: sentence2) {
        sentence3 += s;
        if (s.contains("?") || s.contains("!") || s.contains(".")) {
            break;
        }
        sentence3 += " like ";
    }
    return sentence3;
}