public String altCase(String text) {
    String s = "";
    for (int i = 0; i < text.length(); i++) {
        if (i % 2 == 0) {
            s += Character.toString(Character.toUpperCase(text.charAt(i)));
            continue;
        }
        s += Character.toString(Character.toLowerCase(text.charAt(i)));
    }
    return s;
}