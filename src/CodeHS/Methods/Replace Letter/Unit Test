public String replaceLetter(String word, char letterToReplace, char replacingLetter)
{
    String[] word2 = word.split("");
    String word3 = "";
    for (String s: word2) {
        if (s.charAt(0) == letterToReplace) {
            word3 += replacingLetter;
            continue;
        }
        word3 += s;
    }
    return word3;
}